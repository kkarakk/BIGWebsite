<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="250dip"
        class="com.google.android.gms.maps.SupportMapFragment" />
   <TextView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
        android:text="Beyout Investment Group"
        android:textSize="34dp"
       android:textAlignment="center"
       android:textStyle="bold|italic"
       />
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
<TableLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TableRow
    android:layout_width="wrap_content"
    android:layout_height="match_parent">
        <TextView
            android:textSize="25dp"
            android:textStyle="bold"
            android:text="P.O Box:"/>
        <TextView
            android:textSize="25dp"
            android:lines="2"
            android:text="2992 Safat 13030\nKuwait"/>
    </TableRow>
    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="25dp"
            android:textStyle="bold"
            android:text="Telephone:"/>
        <TextView
            android:textSize="25dp"
            android:autoLink="all"
            android:textColorLink="@color/wallet_link_text_light"
            android:text="(+965)1821182"/>
    </TableRow>
    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="25dp"
            android:textStyle="bold"
            android:text="Fax:"/>
        <TextView
            android:textSize="25dp"
            android:autoLink="all"
            android:textColorLink="@color/wallet_link_text_light"
            android:text="(+965)22320151"/>
    </TableRow>
    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="25dp"
            android:textStyle="bold"
            android:text="Email:"/>
        <TextView
            android:textSize="20dp"
            android:autoLink="email"
            android:textColorLink="@color/wallet_link_text_light"
            android:text="info@bigholding.com"/>
    </TableRow>
</TableLayout>
    </ScrollView>



</LinearLayout>